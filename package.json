{
	"name": "lazy-piping",
	"version": "1.1.5",
	"description": "A lazy piping operator for iterators",
	"keywords": [
		"iterables",
		"iterate",
		"pipe",
		"array"
	],
	"license": "The Unlicense",
	"author": "Roee Shapira",
	"sideEffects": false,
	"exports": {
		"import": "./packages/lazy-piping.esm/",
		"require": "./packages/lazy-piping.cjs/"
	},
	"main": "./packages/lazy-piping.cjs/src/index.js",
	"module": "./packages/lazy-piping.esm/src/index.js",
	"files": [
		"./packages/*"
	],
	"scripts": {
		"build": "rollup -c",
		"clean:all": "lerna run clean",
		"lint": "eslint ./src/**/*.ts && prettier --check ./src/**/*.ts",
		"lint:staged": "lint-staged",
		"prepare": "run-s lint clean:all build test",
		"test": "jest"
	},
	"husky": {
		"hooks": {
			"pre-commit": "run-s lint:staged clean:all build",
			"pre-push": "run-s lint test"
		}
	},
	"lint-staged": {
		"**/package.json": [
			"sort-package-json",
			"git add"
		],
		"*.ts": [
			"eslint --fix",
			"git add"
		],
		"*.{ts,md}": [
			"prettier --write",
			"git add"
		]
	},
	"devDependencies": {
		"@types/jest": "^25.1.1",
		"@types/node": "^12.12.26",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.2.1",
		"jest": "^25.1.0",
		"lerna": "^3.20.2",
		"lint-staged": "^10.0.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.1",
		"rollup": "^1.30.1",
		"rollup-plugin-terser": "^5.2.0",
		"rollup-plugin-typescript2": "^0.25.3",
		"sort-package-json": "^1.39.1",
		"ts-jest": "^25.1.0",
		"typescript": "^3.7.5"
	}
}
