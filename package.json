{
    "name": "lazy-piping",
    "version": "1.0.19",
    "description": "A lazy piping operator for iterators",
    "main": "./packages/lazy-piping.cjs/src/index.js",
    "module": "./packages/lazy-piping.esm/src/index.js",
    "exports": {
        ".": {
            "require": "./packages/lazy-piping.cjs/",
            "default": "./packages/lazy-piping.esm/"
        }
    },
    "sideEffects": false,
    "scripts": {
        "clean:all": "lerna run clean",
        "lint:staged": "lint-staged",
        "lint": "eslint ./src/**/*.ts && prettier --check ./src/**/*.ts",
        "build:esm": "tsc --project ./build-config-files/tsconfig.esm.json",
        "build:cjs": "tsc --project ./build-config-files/tsconfig.cjs.json",
        "build:umd": "tsc --project ./build-config-files/tsconfig.umd.json",
        "build": "run-s build:*",
        "test": "jest",
        "prepare": "run-s lint clean:all build test"
    },
    "keywords": [
        "iterables",
        "iterate",
        "pipe",
        "array"
    ],
    "author": "Roee Shapira",
    "license": "The Unlicense",
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.14",
        "@typescript-eslint/eslint-plugin": "^2.10.0",
        "@typescript-eslint/parser": "^2.10.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.1.0",
        "jest": "^24.9.0",
        "lerna": "^3.19.0",
        "lint-staged": "^9.5.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.0",
        "ts-jest": "^24.2.0",
        "typescript": "^3.7.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s lint:staged clean:all build",
            "pre-push": "run-s lint test"
        }
    },
    "lint-staged": {
        "*.{ts,md}": [
            "prettier --write",
            "git add"
        ],
        "*.ts": [
            "eslint --fix",
            "git add"
        ]
    }
}
